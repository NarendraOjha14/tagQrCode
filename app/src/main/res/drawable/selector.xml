<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="false">
        <shape >
            <corners
                android:radius="35dp"
                />
            <solid
                android:color="#ff3a6d73"
                />
            <padding
                android:left="1dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="270dp"
                android:height="60dp"
                />
        </shape>


    </item>
    <item android:state_pressed="true"
        >
        <shape>
            <corners
                android:radius="35dp"
                />
            <solid
                android:color="#eb181bff"
                />
            <padding
                android:left="1dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="270dp"
                android:height="60dp"
                />
        </shape>



    </item>
</selector>
